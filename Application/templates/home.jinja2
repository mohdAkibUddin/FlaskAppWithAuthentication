{% extends 'layout.jinja2' %}

{% block content %}
    <div class="container">
        <h1>{{title}}</h1>
        <p>{{description}}</p>
    </div>
    <table class="table table-hover">
    <thead class="thead-dark">
    <tr>
        <th scope="col">Actor's ID</th>
        <th scope="col">Name</th>
        <th scope="col">Movie</th>
        <th scope="col">Age</th>
        <th scope="col">Year</th>
    </tr>
    </thead>
    <tbody>
    {% for actor in actors %}
    <tr>
        <td><a href="/actors/view/{{actor.actorID}}/">{{ actor.actorID }}</a></td>
        <td>{{ actor.name }}</td>
        <td>{{ actor.movie }}</td>
        <td>{{ actor.age }}</td>
        <td>{{ actor.year }}</td>
    </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}